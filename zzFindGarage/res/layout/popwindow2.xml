<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="124dp"
        android:id="@+id/pop_layout"
    
 >
 <RelativeLayout 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     >
 <ImageView 
     android:layout_width="wrap_content"
     android:layout_height="124dp"
     
     android:background="@drawable/baa6"
     />
      <ImageView 
          android:layout_width="18dp"
          android:layout_height="13dp"
          android:src="@drawable/baa5"
          android:id="@+id/mIvwww1"
          android:layout_centerHorizontal="true"
          android:paddingTop="2dp"
          />
      
      <LinearLayout 
          android:layout_marginTop="20dp"
          android:layout_width="fill_parent"
          android:layout_height="100dp"
          android:orientation="vertical"
          >
         <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:orientation="horizontal"
             >
             <RelativeLayout 
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:id="@+id/mRlpw1"
                 >
                 <ImageView 
                     android:layout_width="28dp"
                     android:layout_height="28dp"
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/baa1"
                     android:id="@+id/mIvpw1"
                     />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:text="@string/abca1"
                     android:textColor="@color/white"
                     android:layout_below="@id/mIvpw1"
                     />
             </RelativeLayout>
             <View 
                 android:layout_width="1dp"
                 android:layout_height="45dp"
                 android:layout_marginBottom="5dp"
                 android:background="@color/white"
                 />
             <RelativeLayout 
                 android:layout_width="0dp"
                                  android:id="@+id/mRlpw2"
                 
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 >
                 <ImageView 
                     android:layout_width="28dp"
                     android:layout_height="28dp"
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/baa2"
                     android:id="@+id/mIvpw2"
                     />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:text="@string/abca2"
                     android:textColor="@color/white"
                     android:layout_below="@id/mIvpw2"
                     />
             </RelativeLayout>
             </LinearLayout>
             <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:orientation="horizontal"
             >
             <View 
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="5dp"
                 android:layout_height="1dp"
                 android:background="@color/white"
                 />
             <View 
                 android:layout_width="0dp"
                                  android:layout_marginLeft="5dp"
                 android:layout_marginRight="10dp"
                 android:layout_weight="1"
                 android:layout_height="1dp"
                 android:background="@color/white"
                 />
             </LinearLayout>
                   <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:orientation="horizontal"
             >
             <RelativeLayout 
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                                  android:id="@+id/mRlpw3"
                 android:layout_marginTop="3dp"
                 android:layout_weight="1"
                 >
                 <ImageView 
                     android:layout_width="28dp"
                     android:layout_height="28dp"
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/baa3"
                     android:id="@+id/mIvpw3"
                     />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:text="@string/abca3"
                     android:textColor="@color/white"
                     android:layout_below="@id/mIvpw3"
                     />
             </RelativeLayout>
             <View 
                 android:layout_width="1dp"
                 android:layout_height="45dp"
                 android:layout_marginTop="5dp"
                 android:layout_marginBottom="5dp"
                 android:background="@color/white"
                 />
             <RelativeLayout 
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:layout_marginTop="3dp"
                                  android:id="@+id/mRlpw4"
                 
                 >
                 <ImageView 
                     android:layout_width="28dp"
                     android:layout_height="28dp"
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/baa4"
                     android:id="@+id/mIvpw4"
                     />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:text="@string/abca4"
                     android:textColor="@color/white"
                     android:layout_below="@id/mIvpw4"
                     />
             </RelativeLayout>
             </LinearLayout>
         
      </LinearLayout>
 </RelativeLayout>
</RelativeLayout>
