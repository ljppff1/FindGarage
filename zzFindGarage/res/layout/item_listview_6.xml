<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/ab11"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
       android:paddingTop="5dp"
       android:paddingBottom="5dp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/iv_listview_rent_pic"
            android:layout_width="fill_parent"
         android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:background="@drawable/a" />

        <RelativeLayout
            android:padding="5dp"
            android:background="@drawable/bz21"
            android:layout_width="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
        >
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/bz24"
              android:textColor="@color/white"
              android:textSize="48sp"
              android:id="@+id/mTvri10"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="20dp"
              />
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/bz23"
              android:textColor="@color/white"
              android:textSize="22sp"
                            android:id="@+id/mTvri11"
              android:layout_below="@id/mTvri10"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              />
          
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>