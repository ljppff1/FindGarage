<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/ttt1"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:paddingLeft="25dp"
       android:paddingRight="15dp"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/iv_listview_rent_pic"
            android:layout_width="90dp"
         android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:background="@drawable/a" />

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:id="@+id/mRL_listview_rent_2"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_listview_rent_pic" >
          
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >
              <TextView 
                                android:text="@string/ab3"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:id="@+id/mTvri11"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                  
                  />
              <TextView 
              android:text="@string/ab4"
              android:textSize="20sp"
              android:drawableLeft="@drawable/ab9"
              android:textColor="@color/black"
              android:id="@+id/mTvri12"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                  
                  />
            
              </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>